def addNum():
    num1 = int(input('Enter a number: '))
    num2 = int(input('Enter the number to add: '))
    return num1 + num2

def subtractNum():
    num1 = int(input('Enter a number: '))
    num2 = int(input('Enter the number to subtract by: '))
    return num1 - num2

def multiplyNum():
    num1 = int(input('Enter a number: '))
    num2 = int(input('Enter the number to multiply by: '))
    return num1 * num2

def divideNum():
    num1 = int(input('Enter a number: '))
    num2 = int(input('Enter the number to divide by: '))
    return num1 / num2

print('Option 1 - add \nOption 2 - subtract'
      '\nOption 3 - multiply\nOption 4 - divide\n')

while True:
    choice = input('Enter your option: ')
    if choice == '1':
        print(addNum())
        break
    elif choice == '2':
        print(subtractNum())
    elif choice == '3':
        print(multiplyNum())
    elif choice == '4':
        print(divideNum())
