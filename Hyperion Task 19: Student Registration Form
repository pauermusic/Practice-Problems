ofile = open('Regform.txt', 'w')

numofstudents = int(input('How many students are registering? '))

for i in range(1, numofstudents + 1):
    idnumber = input('Enter the ID number of student ' + str(i) + ': ')
    ofile.write('Student ' + str(i) + ': ' + str(idnumber) + '\n')
    
ofile.close()



close = input('')
